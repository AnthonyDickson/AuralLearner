<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cosc345.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.VoiceControlActivity"></activity>
        <activity android:name=".controller.MelodiesMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cosc345.app.MainActivity" />
        </activity>
        <activity android:name=".controller.RhythmsMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cosc345.app.MainActivity" />
        </activity>
        <activity android:name=".controller.PitchMatchingExercise">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="cosc345.app.MainActivity" />
        </activity>
        <activity android:name=".controller.IntervalsExercise">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="cosc345.app.MainActivity" />
        </activity>
        <activity android:name=".controller.IntervalsMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cosc345.app.MainActivity" />
        </activity>
        <activity android:name=".controller.IntervalExercise">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cosc345.app.controller.IntervalsMenu" />
        </activity>
    </application>

</manifest>